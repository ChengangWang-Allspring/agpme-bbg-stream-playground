{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" }, // <— write to Visual Studio Output → Debug
      {
        "Name": "File",
        "Args": {
          "path": "logs/subscriptions-api-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760, // 10 MB per file (optional)
          "retainedFileCountLimit": 7, // keep last 7 days (optional)
          "shared": true, // allows sharing on Windows
          "flushToDiskInterval": "00:00:02", // flush every 2 seconds (optional)
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": { "ApplicationName": "stream-playground-client" }
  },

  "PlaygroundClient": {
    "ServerBaseUrl": "http://localhost:6066",
    "AsOfDate": null ,  //"2026-02-20"
    "Chunk": true,
    "Targets": [
      { "entityType": "accounts", "entityName": "TEST5"},
      { "entityType": "groups", "entityName": "ECMACCT"},
      { "entityType": "groups", "entityName": "FIAACCT"},
      { "entityType": "groups", "entityName": "LIQACCTS"},
      { "entityType": "groups", "entityName": "MLACCTS" },
      { "entityType": "groups", "entityName": "PREMCORP"},
      { "entityType": "groups", "entityName": "SHYACCTS"}
    ]
  },

  "MetadataAwsSecrets": {
    "UseAwsSecret": true,
    "Arn": "arn:aws:secretsmanager:us-east-1:387158738887:secret:dev/agpme/api-4IQyrY",
    "KeyName": "AgpmeReadOnlyConnectionString",
    "Region": "us-east-1",
    "Profile": "dev"
  },
  "ProdAwsSecrets": {
    "Region": "us-east-1",
    "Profile": "prod",
    "Arn": "arn:aws:secretsmanager:us-east-1:122118540387:secret:prod/agpme/api-IwFxMU",
    "SecretKeyName": "AgpmeReadOnlyConnectionString"
  },

  "ClientDb": { //Playground Docker Postgres Database
    "ConnectionString": "Host=localhost;Port=6433;Database=agpme_playground;Username=postgres;Password=postgres"
  }

}
