{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" }, // <— write to Visual Studio Output → Debug
      {
        "Name": "File",
        "Args": {
          "path": "logs/simulator-api-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760, // 10 MB per file (optional)
          "retainedFileCountLimit": 7, // keep last 7 days (optional)
          "shared": true, // allows sharing on Windows
          "flushToDiskInterval": "00:00:02", // flush every 2 seconds (optional)
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": { "ApplicationName": "stream-playground-server" }
  },

  "StreamAwsSecrets__PROD_disabled": {
    "UseAwsSecret": true,
    "Arn": "arn:aws:secretsmanager:us-east-1:122118540387:secret:prod/agpme/api-IwFxMU",
    "KeyName": "AgpmeReadOnlyConnectionString",
    "Region": "us-east-1",
    "Profile": "prod"
  },
  "StreamAwsSecrets": {
    "UseAwsSecret": true,
    "Arn": "arn:aws:secretsmanager:us-east-1:760924770781:secret:uat/agpme/api-wAKhkf",
    "KeyName": "AgpmeReadOnlyConnectionString",
    "Region": "us-east-1",
    "Profile": "uat"
  },

  "AllowedHosts": "*"

}

